<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="signUp" onMouseMoved="#moveDefault" prefHeight="700.0" prefWidth="700.0" style="-fx-background-color: ffca18;" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="scene.home.SignUpController">
   <children>
      <PasswordField fx:id="passwd" layoutX="211.0" layoutY="442.0" prefHeight="45.0" prefWidth="300.0" promptText="password" style="-fx-background-color: lightyellow;">
         <font>
            <Font size="20.0" />
         </font>
      </PasswordField>
      <TextField fx:id="id" layoutX="211.0" layoutY="350.0" prefHeight="45.0" prefWidth="300.0" promptText="userid" style="-fx-background-color: lightyellow;">
         <font>
            <Font size="20.0" />
         </font>
      </TextField>
      <TextField fx:id="name" layoutX="211.0" layoutY="261.0" prefHeight="45.0" prefWidth="300.0" promptText="username" style="-fx-background-color: lightyellow;">
         <font>
            <Font size="20.0" />
         </font>
      </TextField>
      <Label layoutX="158.0" layoutY="270.0" text="名字">
         <font>
            <Font name="System Bold" size="20.0" />
         </font>
      </Label>
      <Label layoutX="158.0" layoutY="451.0" text="密碼">
         <font>
            <Font name="System Bold" size="20.0" />
         </font>
      </Label>
      <Label layoutX="158.0" layoutY="359.0" text="帳號">
         <font>
            <Font name="System Bold" size="20.0" />
         </font>
      </Label>
      <Button layoutX="171.0" layoutY="531.0" mnemonicParsing="false" onAction="#submit" onMouseMoved="#moveOver" prefHeight="31.0" prefWidth="109.0" style="-fx-background-color: lightyellow;" text="送出">
         <font>
            <Font name="System Bold" size="18.0" />
         </font></Button>
      <Button layoutX="306.0" layoutY="531.0" mnemonicParsing="false" onAction="#reset" onMouseMoved="#moveOver" prefHeight="39.0" prefWidth="110.0" style="-fx-background-color: lightyellow;" text="重置">
         <font>
            <Font name="System Bold" size="18.0" />
         </font></Button>
      <Button layoutX="440.0" layoutY="531.0" mnemonicParsing="false" onAction="#switchToHome" onMouseMoved="#moveOver" prefHeight="39.0" prefWidth="110.0" style="-fx-background-color: lightyellow;" text="首頁">
         <font>
            <Font name="System Bold" size="18.0" />
         </font></Button>
      <Label fx:id="idWarning" layoutX="211.0" layoutY="407.0" prefHeight="15.0" prefWidth="84.0" textFill="RED" />
      <Label layoutX="214.0" layoutY="131.0" prefHeight="114.0" prefWidth="268.0" text="Sign Up">
         <font>
            <Font name="Segoe Print Bold" size="64.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
